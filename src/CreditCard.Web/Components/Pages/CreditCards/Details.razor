@page "/creditcards/{Id:guid}"
@using CreditCard.Web.Models
@using CreditCard.Web.Services
@inject CreditCardApiService ApiService
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>Detalle de Tarjeta</PageTitle>

<div class="container">
    @if (isLoading)
    {
        <div class="d-flex justify-content-center my-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Cargando...</span>
            </div>
        </div>
    }
    else if (card == null)
    {
        <div class="alert alert-danger">
            <i class="bi bi-exclamation-triangle me-2"></i>Tarjeta no encontrada
            <a href="/creditcards" class="alert-link ms-2">Volver al listado</a>
        </div>
    }
    else
    {
        <div class="row justify-content-center">
            <div class="col-lg-8">
                @if (!string.IsNullOrEmpty(successMessage))
                {
                    <div class="alert alert-success alert-dismissible fade show">
                        <i class="bi bi-check-circle me-2"></i>@successMessage
                        <button type="button" class="btn-close" @onclick="() => successMessage = null"></button>
                    </div>
                }

                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <div class="alert alert-danger alert-dismissible fade show">
                        <i class="bi bi-exclamation-triangle me-2"></i>@errorMessage
                        <button type="button" class="btn-close" @onclick="() => errorMessage = null"></button>
                    </div>
                }

                <!-- Tarjeta Visual -->
                <div class="card mb-4 @GetCardTypeClass(card.CardType) text-white" style="border-radius: 15px; min-height: 200px;">
                    <div class="card-body d-flex flex-column justify-content-between p-4">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <span class="badge @(card.IsActive ? "bg-success" : "bg-danger") mb-2">
                                    @(card.IsActive ? "ACTIVA" : "INACTIVA")
                                </span>
                                <h4 class="mb-0">@card.CardType</h4>
                            </div>
                            <i class="bi bi-credit-card-2-front" style="font-size: 2.5rem;"></i>
                        </div>
                        <div>
                            <h3 class="font-monospace mb-3">@FormatCardNumber(card.CardNumber)</h3>
                            <div class="d-flex justify-content-between">
                                <div>
                                    <small class="opacity-75">TITULAR</small>
                                    <p class="mb-0 fw-bold">@card.CardHolderName</p>
                                </div>
                                <div class="text-end">
                                    <small class="opacity-75">VENCE</small>
                                    <p class="mb-0 fw-bold">@card.ExpirationDate</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Información de Crédito -->
                <div class="row mb-4">
                    <div class="col-md-4">
                        <div class="card text-center h-100">
                            <div class="card-body">
                                <h6 class="text-muted">Límite de Crédito</h6>
                                <h3 class="text-primary">@card.CreditLimit.ToString("C")</h3>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card text-center h-100">
                            <div class="card-body">
                                <h6 class="text-muted">Crédito Disponible</h6>
                                <h3 class="text-success">@card.AvailableCredit.ToString("C")</h3>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card text-center h-100">
                            <div class="card-body">
                                <h6 class="text-muted">Deuda Actual</h6>
                                <h3 class="text-danger">@card.UsedCredit.ToString("C")</h3>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Barra de uso -->
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-2">
                            <span>Uso del Crédito</span>
                            <span class="fw-bold">@card.UsagePercentage.ToString("F1")%</span>
                        </div>
                        <div class="progress" style="height: 25px;">
                            <div class="progress-bar @GetProgressBarClass(card.UsagePercentage)" 
                                 role="progressbar" 
                                 style="width: @card.UsagePercentage%">
                                @if (card.UsagePercentage > 10)
                                {
                                    <span>@card.UsedCredit.ToString("C")</span>
                                }
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Información adicional -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="bi bi-info-circle me-2"></i>Información de la Tarjeta</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <p><strong>ID:</strong> <code>@card.Id</code></p>
                                <p><strong>Creada:</strong> @card.CreatedAt.ToString("dd/MM/yyyy HH:mm")</p>
                            </div>
                            <div class="col-md-6">
                                <p><strong>Última actualización:</strong> @(card.UpdatedAt?.ToString("dd/MM/yyyy HH:mm") ?? "N/A")</p>
                                <p><strong>Estado:</strong> 
                                    <span class="badge @(card.IsActive ? "bg-success" : "bg-danger")">
                                        @(card.IsActive ? "Activa" : "Inactiva")
                                    </span>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Acciones -->
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="bi bi-gear me-2"></i>Acciones</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex flex-wrap gap-2">
                            <a href="/creditcards" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-1"></i>Volver
                            </a>
                            <a href="/creditcards/edit/@card.Id" class="btn btn-outline-primary">
                                <i class="bi bi-pencil me-1"></i>Editar
                            </a>
                            @if (card.IsActive)
                            {
                                <button class="btn btn-outline-warning" @onclick="ToggleStatus" disabled="@isProcessing">
                                    <i class="bi bi-pause-circle me-1"></i>Desactivar
                                </button>
                            }
                            else
                            {
                                <button class="btn btn-outline-success" @onclick="ToggleStatus" disabled="@isProcessing">
                                    <i class="bi bi-play-circle me-1"></i>Activar
                                </button>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    [Parameter]
    public Guid Id { get; set; }

    private CreditCardViewModel? card;
    private bool isLoading = true;
    private bool isProcessing = false;
    private string? errorMessage;
    private string? successMessage;

    protected override async Task OnInitializedAsync()
    {
        await LoadCard();
    }

    private async Task LoadCard()
    {
        try
        {
            isLoading = true;
            card = await ApiService.GetByIdAsync(Id);
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task ToggleStatus()
    {
        if (card == null) return;

        try
        {
            isProcessing = true;
            if (card.IsActive)
            {
                await ApiService.DeactivateAsync(Id);
                successMessage = "Tarjeta desactivada correctamente";
            }
            else
            {
                await ApiService.ActivateAsync(Id);
                successMessage = "Tarjeta activada correctamente";
            }
            await LoadCard();
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
        }
        finally
        {
            isProcessing = false;
        }
    }

    private string FormatCardNumber(string number)
    {
        if (number.Length < 16) return number;
        return string.Join(" ", Enumerable.Range(0, number.Length / 4)
            .Select(i => number.Substring(i * 4, Math.Min(4, number.Length - i * 4))));
    }

    private string GetCardTypeClass(string cardType) => cardType.ToLower() switch
    {
        "visa" => "bg-primary",
        "mastercard" => "bg-danger",
        "american express" => "bg-info",
        "discover" => "bg-warning text-dark",
        _ => "bg-secondary"
    };

    private string GetProgressBarClass(decimal percentage) => percentage switch
    {
        >= 80 => "bg-danger",
        >= 50 => "bg-warning",
        _ => "bg-success"
    };
}
