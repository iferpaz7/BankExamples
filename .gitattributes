###############################################################################
# Default behavior - Set line endings to auto and treat as text
###############################################################################
* text=auto

###############################################################################
# C# and .NET Project Files
###############################################################################
*.cs        text diff=csharp eol=lf
*.csproj    text merge=union
*.sln       text merge=union
*.sln.DotSettings text
*.resx      text
*.xaml      text

###############################################################################
# PowerShell and Script Files
###############################################################################
*.ps1       text eol=lf
*.ps1xml    text eol=lf
*.psm1      text eol=lf
*.psd1      text eol=lf
*.bat       text eol=crlf
*.cmd       text eol=crlf
*.sh        text eol=lf

###############################################################################
# Configuration and Data Files
###############################################################################
*.json      text diff=json eol=lf
*.jsonc     text diff=json eol=lf
*.xml       text diff=xml eol=lf
*.config    text eol=lf
*.yaml      text eol=lf
*.yml       text eol=lf
*.toml      text eol=lf
*.ini       text eol=lf
*.csv       text eol=lf
*.tsv       text eol=lf

###############################################################################
# Documentation Files
###############################################################################
*.md        text diff=markdown eol=lf
*.markdown  text diff=markdown eol=lf
*.txt       text eol=lf
*.rst       text eol=lf

###############################################################################
# Web and CSS Files
###############################################################################
*.html      text diff=html eol=lf
*.htm       text diff=html eol=lf
*.css       text diff=css eol=lf
*.scss      text diff=css eol=lf
*.js        text eol=lf
*.ts       text eol=lf
*.tsx       text eol=lf

###############################################################################
# Git and Repository Files
###############################################################################
.gitattributes text
.gitignore     text eol=lf
.gitmodules    text eol=lf

###############################################################################
# Binary Files - Treat as binary
###############################################################################
*.bin       binary
*.exe       binary
*.dll       binary
*.so        binary
*.dylib     binary
*.png       binary
*.jpg       binary
*.jpeg      binary
*.gif       binary
*.ico       binary
*.bmp       binary
*.svg       binary
*.woff      binary
*.woff2     binary
*.ttf       binary
*.otf       binary
*.eot       binary
*.zip       binary
*.7z        binary
*.rar       binary
*.tar       binary
*.gz        binary
*.gzip      binary
*.pdf       binary
*.pdb       binary
*.db        binary
*.sqlite    binary

###############################################################################
# Visual Studio and IDE Files
###############################################################################
*.sln.user  text
*.suo       binary
*.sln.DotSettings.user text
.vs/        -text -diff

###############################################################################
# Build Output and Dependencies
###############################################################################
bin/        -text -diff
obj/        -text -diff
.ncrunch*   -text -diff
packages/   -text -diff
node_modules/ -text -diff
